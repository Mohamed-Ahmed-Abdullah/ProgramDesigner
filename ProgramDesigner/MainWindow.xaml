<Window x:Class="ProgramDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ProgramDesigner.Controls"
        xmlns:converters="clr-namespace:ProgramDesigner.Converters"
        Title="MainWindow" Height="397.368" Width="592.105">
    <Grid>
        <Grid.Resources>
            <converters:BoolToIntConverter x:Key="BoolToIntConverter"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>      
        <Border Grid.Column="1" BorderThickness="0">
            <Canvas Name="MainCanvas" MouseDown="CanvasOnMouseDown" MouseMove="CanvasOnMouseMove" MouseUp="CanvasOnMouseUp" 
                    Background="White">                                
                <controls:DragGrip x:Name="RedDragGrip" IsDragable="True">
                    <Border Width="100" Height="60" Background="Red"
                            BorderThickness="{Binding ElementName=RedDragGrip,Path=IsSelected,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,Converter={StaticResource BoolToIntConverter},ConverterParameter=5}" 
                            BorderBrush="DeepSkyBlue">
                    </Border>
                </controls:DragGrip>
                <controls:DragGrip x:Name="GreenDragGrip" IsDragable="True">    
                    <Border Width="200" Height="120" Background="Green"
                            BorderThickness="{Binding ElementName=GreenDragGrip,Path=IsSelected,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,Converter={StaticResource BoolToIntConverter},ConverterParameter=5}" 
                            BorderBrush="DeepSkyBlue">
                    </Border>
                </controls:DragGrip>

                <Rectangle Name="SelectionRectangle" Width="250" Height="250" StrokeThickness="1"
                           Stroke="#FF0097FF" StrokeDashArray="7 7" Visibility="Collapsed" />
            </Canvas>
        </Border>
    </Grid>
</Window>
